@model IEnumerable<Vidly.Models.Customers.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Subscription</th>
            <th>Discount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "CustomerDetails", "Customers", routeValues: new { Id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => @item.MembershipType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipType.Discount)%
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
