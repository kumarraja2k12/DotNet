@model List<Vidly.Models.Customers.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var customer in Model)
        {
            <li>@Html.ActionLink(customer.Name, "Index", "Customer", routeValues: new { Id = customer.Id })</li>
        }
    </ul>
}
else
{
    <text>No customers available!</text>
}